<% provide :title, t(".header") %>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<%= stylesheet_link_tag "body-style" %>
<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= hidden_field_tag :normal_login, Settings.login_hidden_value %>

    <h2 class="text-center"><%= t ".header" %></h2>
    <div class="text-center social-btn">

      <%= link_to login_facebook_path, class: "btn btn-primary btn-block" do %>
        <i class="fab fa-facebook"></i><%= t ".sign_in_with" %><b> <%= t".facebook" %></b>
      <% end %>

      <%= link_to login_google_path, class: "btn btn-danger btn-block" do %>
        <i class="fab fa-google"></i><%= t(".sign_in_with") %><b> <%= t".google" %></b>
      <% end %>

    </div>

    <div class="or-seperator"><i><%= t".or" %></i></div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.email_field :email, class: "form-control",
          placeholder: t(".label_email") %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password, class: "form-control",
          placeholder: t(".label_password") %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="input-group">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me, class: "session_remember" %>
          <% end %>
        </div>
      </div>
    <% end -%>

    <%= f.submit t(".btn_login"), class: "btn btn-success btn-block login-btn" %>
    <div class="hint-text small"><%= t ".content1" %>
      <%= link_to t(".register"), new_user_registration_path, class: "text-success" %>
    </div>
  <% end %>
</div>

<%= render "users/shared/links" %>
