<% provide :title, t(".title") %>
<%= stylesheet_link_tag "body-style" %>

<div class="signup-form">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <h2><%= t ".update" %></h2>
      <p class="hint-text"><%= t ".content1" %></p>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", autofocus: true,
          autocomplete: "email", placeholder: t(".email_holder") %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t ".content5", resource: resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %> <i><%= t ".content3" %></i><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "off",
          placeholder: t(".pass_holder") %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control",
          placeholder: t(".passconfirm_holder") %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i><%= t ".content4" %></i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <%= f.submit t(".confirm1"), class: "btn btn-success btn-lg btn-block" %>
    <% end %>
    <p><%= t ".unhappy_label" %><%= button_to t(".cancel_label"), registration_path(resource_name),
      data: { confirm: t(".confirm_banner") }, method: :delete, class: "btn btn-danger btn-block" %></p>
    <%= link_to t(".back"), :back %>
  </div>
</div>
